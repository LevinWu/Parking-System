
@{
    ViewBag.Title = "ArrangeRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ArrangeRole</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ArrangeRoles</h4>
        <hr />
        <div class="form-group">
            @Html.Label("Roles List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Roles")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Users List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Users")
            </div>
        </div>

        <div class ="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
